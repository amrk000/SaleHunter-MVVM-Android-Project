<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SaleHunter" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/lightModeprimary</item>
        <item name="colorPrimaryDark">@color/lightModesecondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/lightModeBackground</item>
        <item name="textFillColor">@color/lightModeText</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?attr/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:fontFamily">@font/raleway_regular</item>


    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/lightModeprimary</item>
        <item name="colorPrimaryDark">@color/lightModesecondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/lightModeBackground</item>
        <item name="textFillColor">@color/lightModeText</item>
        <item name="android:windowBackground">@drawable/splashdesign</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?attr/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:fontFamily">@font/raleway_regular</item>

    </style>
</resources>