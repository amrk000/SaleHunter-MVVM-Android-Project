<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SaleHunter" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/darkModeprimary</item>
        <item name="colorPrimaryDark">@color/darkModesecondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/darkModeBackground</item>
        <item name="textFillColor">@color/darkModeText</item>
        <item name="colorError">@color/accent</item>
        <item name="colorOnError">@color/accent</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:fontFamily">@font/raleway_regular</item>

    </style>

    <style name="Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/darkModeprimary</item>
        <item name="colorPrimaryDark">@color/darkModesecondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/darkModeBackground</item>
        <item name="textFillColor">@color/darkModeText</item>
        <item name="android:windowBackground">@drawable/splashdesign</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:fontFamily">@font/raleway_regular</item>

    </style>

    <style name="DialogLayOnAnimation">
        <item name="android:windowEnterAnimation">@anim/lay_on</item>
        <item name="android:windowExitAnimation">@anim/lay_off</item>
    </style>

</resources>