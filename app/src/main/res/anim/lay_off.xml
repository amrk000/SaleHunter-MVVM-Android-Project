<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:interpolator/decelerate_quad">
    <scale
        android:fromXScale="100%"
        android:fromYScale="100%"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="130%"
        android:toYScale="130%"
        android:duration="500"
        />

    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="250"
        />
</set>